-- Quiz Funnel

 SELECT *
 FROM survey
 LIMIT 10;
 
 -- Response Number
 
  SELECT question, 
 		COUNT(Distinct user_id) as 'responses'
 FROM survey
 GROUP BY question;
 
 -- Home Try On Funnel: 3 tables
 
SELECT *
FROM quiz
LIMIT 5;

SELECT *
from home_try_on
LIMIT 5;

SELECT *
FROM purchase
LIMIT 5;

--

SELECT DISTINCT quiz.user_id, 
home_try_on.user_id IS NOT NULL AS 'home_try_on',
home_try_on.number_of_pairs,
purchase.user_id IS NOT NULL AS 'is_purchase'
FROM quiz
LEFT JOIN home_try_on
ON quiz.user_id = home_try_on.user_id
LEFT JOIN purchase
ON purchase.user_id = quiz.user_id
LIMIT 10;
